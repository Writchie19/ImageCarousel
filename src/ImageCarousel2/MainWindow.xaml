<Window x:Class="ImageCarousel2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCarousel2"
        mc:Ignorable="d"
        Title="ImageCarousel" Height="350" Width="525"
        WindowStyle="None" ResizeMode="NoResize"  
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized"
    Closing="MainWindow_Closing">
        <Window.Background>
            <ImageBrush ImageSource="/ImageCarousel2;component/Images/halloweenbackground.jpg" Stretch="Fill" />
        </Window.Background>
        <Grid>
            <Image Grid.Column="1"  x:Name="img" Height="auto" Width="1000"/>
        </Grid>

</Window>
